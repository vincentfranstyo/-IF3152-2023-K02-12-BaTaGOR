  generator client {
    provider = "prisma-client-js"
  }

  datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
  }

  /// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
  model archives {
    history_id BigInt  @default(autoincrement())
    booking_id BigInt
    field_id   BigInt
    booking    booking @relation(fields: [booking_id], references: [booking_id], onDelete: Cascade)
    field      field   @relation(fields: [field_id], references: [field_id], onDelete: Cascade)

    @@id([history_id, booking_id, field_id])
  }

  /// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
  model booking {
    booking_id      BigInt           @id @unique @default(autoincrement())
    duration_minute BigInt
    start_time      DateTime         @db.Time(6)
    booking_date    DateTime         @db.Date
    total_price     BigInt
    customer_id     BigInt
    field_id        BigInt
    archives        archives[]
    customer        customer         @relation(fields: [customer_id], references: [user_id], onDelete: Cascade)
    field           field            @relation(fields: [field_id], references: [field_id], onDelete: Cascade)
    manage_booking  manage_booking[]
  }

  /// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
  model customer {
    user_id  BigInt    @id @unique @default(autoincrement())
    domicile String?
    booking  booking[]
    user     user      @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  }

  /// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
  model field {
    field_id           BigInt     @id @unique @default(autoincrement())
    field_name         String
    street             String
    city               String
    province           String
    postal_code        BigInt
    image_url          String
    rate_per_hour      BigInt
    operational_status String
    owner_id           BigInt?
    archives           archives[]
    booking            booking[]
    owner              owner?     @relation(fields: [owner_id], references: [user_id], onDelete: Cascade)
    staff              staff[]
  }

  /// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
  model manage_booking {
    booking_id BigInt
    staff_id   BigInt
    booking    booking @relation(fields: [booking_id], references: [booking_id], onDelete: Cascade)
    staff      staff   @relation(fields: [staff_id], references: [user_id], onDelete: Cascade)

    @@id([booking_id, staff_id])
  }

  /// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
  model owner {
    user_id BigInt  @id @unique @default(autoincrement())
    field   field[]
    user    user    @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  }

  /// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
  model staff {
    user_id        BigInt           @unique
    field_id       BigInt           @map("field-id")
    manage_booking manage_booking[]
    field          field            @relation(fields: [field_id], references: [field_id], onDelete: Cascade)
    user           user             @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

    @@id([user_id, field_id])
  }

  /// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
  model user {
    user_id      BigInt    @id @unique @default(autoincrement())
    username     String    @unique
    name         String
    phone_num    String
    email        String
    hashed_pass  String?
    login_status String
    access_level String
    customer     customer?
    owner        owner?
    staff        staff?
  }
